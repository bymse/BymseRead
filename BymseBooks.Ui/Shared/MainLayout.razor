@using BymseBooks.Ui.Models
@inherits LayoutComponentBase
<CascadingValue Value="@this">
    <TopBar Items="@Items"/>
    <main class="container">
        @Body
    </main>
</CascadingValue>

@code
{
    public ICollection<ITopBarItem> Items { get; } = new List<ITopBarItem>
    {
        new LinkTopBarItem
        {
            Css = "top-bar__menu-button",
            Url = "/"
        }
    };
}