@using BymseRead.Core.Models

<ul class="bookmarks-list">
    @if (Bookmarks.LastPageBookmark != null)
    {
        <BookmarkCard Book="Book" Bookmark="Bookmarks.LastPageBookmark"/>
    }
    @foreach (var bookmark in Bookmarks.CustomBookmarks)
    {
        <BookmarkCard Book="Book" Bookmark="bookmark"/>
    }
</ul>

@code {

    [Parameter]
    public BookmarksListModel Bookmarks { get; set; }

    [Parameter]
    public BookModel Book { get; set; }

}