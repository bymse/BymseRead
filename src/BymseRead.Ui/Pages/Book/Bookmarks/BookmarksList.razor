@using BymseRead.Core.Models

<ul class="bookmarks-list">
    @if (Bookmarks.LastPageBookmark != null)
    {
        <BookmarkCard Book="Book" Bookmark="Bookmarks.LastPageBookmark" OnEdit="OnEdit" OnClick="OnClick"/>
    }
    @foreach (var bookmark in Bookmarks.CustomBookmarks)
    {
        <BookmarkCard Book="Book" Bookmark="bookmark" OnEdit="OnEdit" OnClick="OnClick"/>
    }
</ul>

@code {

    [Parameter]
    public BookmarksListModel Bookmarks { get; set; }

    [Parameter]
    public BookModel Book { get; set; }
    
    [Parameter]
    public Func<BookmarkModel, Task> OnEdit { get; set; }
    
    [Parameter]
    public Func<BookmarkModel, Task> OnClick { get; set; }
}