<?xml version="1.0" encoding="UTF-8"?>
<?xaml-comp compile="true" ?>

<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:app="using:BymseBooks.App"
    xmlns:viewModel="clr-namespace:BymseBooks.App.ViewModel"
    x:DataType="viewModel:BookViewModel">
    <DataTemplate x:Key="BookCardTemplate">
        <Border Style="{StaticResource BookCardBorder}">
            <Frame Style="{StaticResource BookCardWrapper}">
                <VerticalStackLayout Style="{StaticResource BookCard}">
                    <Label Text="{Binding Title}" Style="{StaticResource BookCardTitle}" />
                    <Label Text="{Binding Author}" Style="{StaticResource BookCardAuthor}" />
                </VerticalStackLayout>
            </Frame>
        </Border>
    </DataTemplate>
</ResourceDictionary>